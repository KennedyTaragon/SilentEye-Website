# Django Settings for SilentEye Project
# Copy this file to .env and update the values for your environment

# SECURITY SETTINGS
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True

# ALLOWED HOSTS (comma-separated for multiple hosts)
ALLOWED_HOSTS=0.0.0.0,127.0.0.1,localhost

# DATABASE CONFIGURATION
# For PostgreSQL (recommended for production)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=silenteye_db
DB_USER=vasco
DB_PASSWORD=1234
DB_HOST=localhost
DB_PORT=5432

# For SQLite (development only)
# DB_ENGINE=django.db.backends.sqlite3
# DB_NAME=db.sqlite3

# RENDER DEPLOYMENT (will be automatically set by Render)
# DATABASE_URL=postgresql://user:password@host:port/database
# DEBUG=False
# ALLOWED_HOSTS=your-render-app-name.onrender.com

# Email Settings (optional - for contact forms)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
